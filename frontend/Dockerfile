COPY frontend/package*.json ./

# ğŸ”’ Sicheres & reproduzierbares Installieren (mit lockfile)
RUN npm ci || npm install

# ğŸ“¦ Installiere zusÃ¤tzlich @vueuse/core
RUN npm install @vueuse/core

# ---------- ğŸ’» Development ----------
FROM base AS dev
ENV NODE_ENV=development

# ğŸ“ Kopiere Code (wird zusÃ¤tzlich als Volume gemountet)
COPY frontend/ ./

# ğŸš€ Expose Vite Dev Server
EXPOSE 5173

# Startet Vite im Host-Modus (damit localhost in Docker funktioniert)
CMD ["npm", "run", "dev", "--", "--host"]

# ---------- ğŸš€ Production ----------
FROM base AS prod
ENV NODE_ENV=production

# ğŸ“ Projektdateien kopieren und bauen
COPY frontend/ ./
RUN npm run build

# ---------- ğŸŒ Nginx Serve Stage ----------
FROM nginx:1.27-alpine AS serve

# ğŸ§© Kopiere nur das gebaute Frontend
COPY --from=prod /app/dist /usr/share/nginx/html

# ğŸ”§ Optional: Custom Nginx Config fÃ¼r SPA (vue-router support)
# Falls du vue-router im "history"-Modus nutzt:
COPY ./nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
